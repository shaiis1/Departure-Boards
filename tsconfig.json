{
    "compilerOptions": {
      "target": "es2020", // or a more recent ECMAScript version that supports ES modules
      "module": "ES6", // for ES module support
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true, // allows default imports from modules with no default export
      "strict": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  